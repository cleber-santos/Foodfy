{% extends "layout.njk" %}

{% block head%}

<title>Foodfy</title>

{% endblock %}

{% block content%}

<div class="container">

    <div class="banner">

        <div class="content">
            <h1>As melhores receitas</h1>
            <p>
                Aprenda a construir os melhores pratos
                com receitas criadas por profissionais
                do mundo inteiro.
            </p>
        </div>
        <div class="chef">
            <img src="/assets/chef.png" alt="Chefe de cozinha">
        </div>
    </div>

    <h2 class="mostAccessed">Mais acessadas</h2>

    <section class="cards">

        {% for item in items %}

        <div class="cardindex">
            <div class="image">
                <img src="{{item.image}}" alt="imagem de {{item.title}}">
            </div>
            <div class="title">
                <h3>{{item.title}}</h3>
            </div>
            <div class="by">
                <p>{{item.author}}</p>
            </div>
        </div>

        {% endfor %}

    </section>      
    
</div>

{% endblock %}