{% extends "layout.njk" %}

{% block head %}

    <title>Foodfy | Receitas</title>

{% endblock %}

{% block content %}

<div class="container">

    <section class="cards">

        {% for item in items %}

        <div class="card">
            <div class="image">
                <img src="{{item.image}}" alt="imagem de {{item.title}}">
            </div>
            <div class="title">
                <h3>{{item.title}}</h3>
            </div>
            <div class="by">
                <p>{{item.author}}</p>
            </div>
        </div>

        {% endfor %}
        
    </section>
    
</div>

<script src="scripts/script.js"></script>

{%endblock%}