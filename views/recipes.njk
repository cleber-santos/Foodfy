{% extends "layout.njk" %}

{% block head%}

<title>Foodfy | Receita</title>

{% endblock %}

{% block content%}

<div class="container">

    <div class="top">
        <img src="{{item.image}}" class="imageTop" alt="">
        <h1>{{item.title}}</h1>
        <p>{{item.author}}</p>
    </div>

    <div class="ingredients">
        
        <div class="titleCook">
            <h2>Ingredientes</h2>
            <a href="">Esconder</a>
        </div>

        <div class="list">
            {{item.ingredients}}
            {# <ul>
                <li>3 kg de carne moída (escolha uma carne magra e macia);</li>
                <li>300 g de bacon moído;</li>
                <li>1 ovo;</li>
                <li>3 colheres (sopa) de farinha de trigo;</li>
                <li>3 colheres (sopa) de tempero caseiro: feito com alho, sal, cebola, pimenta e cheiro verde processados no liquidificador;</li>
                <li>30 ml de água gelada;</li>
            </ul> #}
        </div>

    </div>

    <div class="prepare">

        <div class="titleCook">
            <h2>Modo de preparo</h2>
            <a href="">Mostrar</a>
        </div>

        <div class="make">
            {{item.preparation}}
        </div>

    </div>

    <div class="information">

        <div class="titleCook">
            <h2>Informações adicionais</h2>
            <a href="">Esconder</a>
        </div>

        <div class="extra">
            {{item.information}}
        </div>

    </div>
    
</div>

{%endblock%}